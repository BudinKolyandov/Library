<Window x:Class="Library.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Add book to Library" Height="535" Width="435" MinWidth="435" MinHeight="535">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="252*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="AddBackground.jpg"/>
        </Grid.Background>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="69" Margin="38,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" BorderThickness="2" BorderBrush="#FF08AEA6" FontSize="16" Foreground="White" Grid.Column="1">
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>
        <TextBlock x:Name="nameBlock" HorizontalAlignment="Left" Margin="30,60,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Height="36" Width="139" FontSize="20" Foreground="Black" FontWeight="Bold"/>
        <TextBlock x:Name="authorBlock" HorizontalAlignment="Left" Margin="30,139,0,0" TextWrapping="Wrap" Text="Author" VerticalAlignment="Top" Height="42" Width="139" FontSize="20" Foreground="Black" FontWeight="Bold"/>
        <TextBox x:Name="authorBox" HorizontalAlignment="Left" Height="62" Margin="38,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Background="Transparent" BorderThickness="2" BorderBrush="#FF08AEA6" FontSize="16" Foreground="White" Grid.Column="1"/>
        <TextBlock x:Name="placeBlock" HorizontalAlignment="Left" Margin="30,208,0,0" TextWrapping="Wrap" Text="Place in library" VerticalAlignment="Top" Height="65" Width="139" FontSize="20" Foreground="Black" FontWeight="Bold"/>
        <TextBox x:Name="placeBox" HorizontalAlignment="Left" Height="65" Margin="38,208,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Background="Transparent" BorderThickness="2" BorderBrush="#FF08AEA6" FontSize="16" Foreground="White" Grid.Column="1"/>
        <TextBlock x:Name="givenBlock" HorizontalAlignment="Left" Margin="30,306,0,0" TextWrapping="Wrap" Text="Given to" VerticalAlignment="Top" Height="36" Width="139" FontSize="20" Foreground="Black" FontWeight="Bold"/>
        <TextBox x:Name="givenBox" HorizontalAlignment="Left" Height="61" Margin="38,294,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Background="Transparent" BorderThickness="2" BorderBrush="#FF08AEA6" FontSize="16" Foreground="White" Grid.Column="1"/>
        <Button x:Name="button" Content="Add book" HorizontalAlignment="Center" Margin="115,418,124,0" VerticalAlignment="Top" Height="61" Width="186" Background="Transparent" Click="Button_Click" BorderThickness="0" Foreground="Lime" FontSize="36" FontWeight="Bold" Grid.ColumnSpan="2" />
    </Grid>
</Window>
